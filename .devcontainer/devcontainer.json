{
  "name": "ServiceFlow API Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "api",
  "workspaceFolder": "/app",
  "forwardPorts": [
    8000,
    5432
  ],
  "remoteUser": "vscode",
  "postStartCommand": "bash /entrypoint.sh poetry run uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
  
  "customizations": {
    "jetbrains": {
      "backend": "PyCharm"
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}