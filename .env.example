# Переменные для подключения к PostgreSQL
POSTGRES_SERVER=db
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=serviceflow_db
POSTGRES_PORT=5432

# Полный URL для подключения к базе данных, используемый приложением
# Формат: postgresql://<user>:<password>@<server>:<port>/<db>
DATABASE_URL=postgresql://your_postgres_user:your_postgres_password@db:5432/serviceflow_db

# Секретный ключ для подписи JWT токенов
# Можно сгенерировать командой: openssl rand -hex 32
SECRET_KEY=your_super_secret_key

# Время жизни токена доступа в минутах (по умолчанию 1440 = 24 часа)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Список разрешенных CORS источников, перечисленных через запятую
# Пример: "http://localhost:3000,https://your-frontend.com"
